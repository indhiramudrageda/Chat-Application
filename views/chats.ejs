<%- include ('partials/header') %>
<script type="text/javascript" src="../../javascripts/chat.js"></script>
<div class="chat-container">
	<input type="hidden" id="loggedInUser" value="<%=user._id %>"/>
	<div class="row chat-container-inner"> 
		<div class="col-4">
			<%- include ('partials/profile-header') %>
			<div class="chatRooms-container">
				<%- include ('partials/sidebar') %>
			</div>
		</div>
		<div class="col-8" style="padding:0px;">
			<div class="message-container">
				<div class="message-header">
					
				</div>
				
				<div class="landing">
							<div class="landing-item">
								<h1>Start a Conversation!</h1>
							</div>
						</div>
				<div class="message-body">
					<div class="messages">
				
					</div>
					</br></br>
					<div class="messageArea">
						<div class="row">
							<div class="col-10">
								<textarea placeholder="Type a message.." id="message"></textarea>
							</div>
							<div class="col-2">
								<button type="button" class="btn btn-danger btn-xs" onclick="sendMessage();">Send</button>
							</div>
						</div>
					</div>
				</div>	
			</div>
		</div>
	</div>

	
</div>